{
  "name": "pytheas-components",
  "version": "0.1.0",
  "description": "Pytheas Web Component",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pytheas-tools/pytheas.git"
  },
  "author": "Vincent Ogloblinsky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pytheas-tools/pytheas/issues"
  },
  "homepage": "https://github.com/pytheas-tools/pytheas#readme",
  "scripts": {
    "start": "stencil build --dev --watch --serve --es5 --config ./stencil.config.ts",
    "build": "stencil build --config ./stencil.config.ts",
    "postbuild": "npm run copy-wc",
    "build:prod": "NODE_ENV=production stencil build --config ./stencil.config.ts",
    "postbuild:prod": "npm run copy-wc",
    "test": "jest --config jest.config.js --coverage",
    "copy-wc": "npx rimraf ../pytheas-ui/output/web-components && mkdir ../pytheas-ui/output/web-components && cp -R dist ../pytheas-ui/output/web-components"
  },
  "devDependencies": {
    "@stencil/core": "0.18.1",
    "@stencil/sass": "^0.2.3",
    "jest": "^24.8.0",
    "stencil-strip-debug": "^1.0.0",
    "ts-jest": "^24.0.2"
  }
}