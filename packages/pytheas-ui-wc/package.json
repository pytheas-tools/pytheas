{
    "name": "pytheas-ui-wc",
    "version": "0.1.0",
    "scripts": {
        "compile-scss": "npx node-sass app/styles/app.scss .tmp/styles/app.css",
        "compile-scss-prod": "npx node-sass app/styles/app.scss dist/styles/app.css",
        "compile-ts": "npx rollup -c rollup-app_dev.config.js",
        "postcompile-ts": "npm run concat-wc-codemirror",
        "compile-ts-prod": "npx rollup -c rollup-app_prod.config.js",
        "minify-js": "npx uglifyjs dist/scripts/app.js --output dist/scripts/app.js",
        "minify-css": "npx uglifycss dist/styles/app.css --output dist/styles/app.css",
        "copy-assets-prod": "npx copyfiles -u 1 app/index.html dist/",
        "copy-assets": "npx copyfiles -u 1 app/index.html .tmp/",
        "build-wc": "stencil build --config ./components/codeblock/stencil.config.ts",
        "concat-wc-codemirror": "npx concat -o .tmp/scripts/app.js ./node_modules/codemirror/lib/codemirror.js ./node_modules/codemirror/mode/javascript/javascript.js ./node_modules/codemirror/addon/fold/foldcode.js ./node_modules/codemirror/addon/fold/foldgutter.js ./node_modules/codemirror/addon/fold/brace-fold.js .tmp/scripts/app.js",
        "watch": "npm-watch",
        "prebuild": "npx rimraf dist",
        "build": "npm run copy-assets-prod && npm run compile-ts-prod && npm run minify-js && npm run compile-scss-prod && npm run minify-css",
        "serve": "npx live-server .tmp --no-browser",
        "prestart": "npx rimraf .tmp",
        "start": "npm-run-all -p serve watch",
        "test-wc": "jest"
    },
    "watch": {
        "build-wc": {
            "patterns": [
                "components"
            ],
            "extensions": "tsx,scss"
        },
        "compile-ts": {
            "patterns": [
                "app"
            ],
            "extensions": "ts"
        },
        "copy-assets": {
            "patterns": [
                "app"
            ],
            "extensions": "html"
        },
        "compile-scss": {
            "patterns": [
                "app"
            ],
            "extensions": "scss"
        }
    },
    "dependencies": {
        "@stencil/sass": "^0.1.0",
        "@types/filesystem": "0.0.29",
        "codemirror": "^5.40.0",
        "split.js": "^1.3.5"
    },
    "devDependencies": {
        "@babel/core": "^7.0.1",
        "@stencil/core": "^0.12.4",
        "@types/jest": "^23.3.2",
        "babel-preset-es2015-rollup": "^3.0.0",
        "concat": "^1.0.3",
        "copyfiles": "^2.1.0",
        "jest": "^23.6.0",
        "live-server": "^1.2.0",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "npm-run-all": "^4.1.3",
        "npm-watch": "^0.4.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.0",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-commonjs": "^9.1.6",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-typescript": "^1.0.0",
        "tslib": "^1.9.3",
        "typescript": "^3.0.3",
        "uglify-es": "^3.3.9",
        "uglifycss": "0.0.29"
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "jsx"
        ]
    }
}
