{
    "name": "pytheas-ui-wc",
    "version": "0.1.0",
    "scripts": {
        "compile-scss": "npx node-sass app/styles/app.scss .tmp/styles/app.css",
        "compile-scss-prod": "npx node-sass app/styles/app.scss dist/styles/app.css",
        "compile-ts": "npx rollup -c rollup-app_dev.config.js",
        "compile-ts-prod": "npx rollup -c rollup-app_prod.config.js",
        "minify-js": "npx uglifyjs dist/scripts/app.js --output dist/scripts/app.js",
        "minify-css": "npx uglifycss dist/styles/app.css --output dist/styles/app.css",
        "copy-assets-prod": "npx copyfiles -u 1 app/index.html dist/",
        "copy-assets": "npx copyfiles -u 1 app/index.html .tmp/",
        "build-wc": "stencil build --config ./components/codeblock/stencil.config.js",
        "watch": "nodemon --watch app -e ts --exec \"npm run compile-ts\"",
        "prebuild": "npx rimraf dist",
        "build": "npm run copy-assets-prod && npm run compile-ts-prod && npm run minify-js && npm run compile-scss-prod && npm run minify-css",
        "serve": "npx live-server .tmp --no-browser",
        "prestart": "npx rimraf .tmp",
        "start": "npm-run-all -p serve watch"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.0.1",
        "@stencil/core": "^0.12.4",
        "babel-preset-es2015-rollup": "^3.0.0",
        "copyfiles": "^2.1.0",
        "live-server": "^1.2.0",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "npm-run-all": "^4.1.3",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.0",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-typescript": "^1.0.0",
        "tslib": "^1.9.3",
        "typescript": "^3.0.3",
        "uglify-es": "^3.3.9",
        "uglifycss": "0.0.29"
    }
}
