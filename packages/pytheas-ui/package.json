{
    "name": "pytheas-ui-wc",
    "version": "0.1.0",
    "scripts": {
        "build-ts-simple-ast": "npx browserify node_modules/ts-simple-ast/dist/main.js -s ts-simple-ast | uglifyjs -c > .tmp/scripts/ts-simple-ast.min.js",
        "build-ts-simple-ast:prod": "npx browserify node_modules/ts-simple-ast/dist/main.js -s ts-simple-ast | uglifyjs -c > dist/scripts/ts-simple-ast.min.js",
        "compile-scss": "npx node-sass app/styles/app.scss .tmp/styles/app.css",
        "compile-scss:prod": "npx node-sass app/styles/app.scss dist/styles/app.css",
        "compile-ts": "npx rollup -c rollup-app_dev.config.js",
        "compile-dragmock": "npx rollup -c test/vendors/drag-mock/rollup.config.js",
        "postcompile-ts": "npm run concat-wc-codemirror && npx filesize-cli .tmp/scripts",
        "compile-ts:prod": "npx rollup -c rollup-app_prod.config.js",
        "postcompile-ts:prod": "npm run concat-wc-codemirror:prod && npx filesize-cli dist/scripts",
        "minify-js": "npx uglifyjs dist/scripts/app.js --output dist/scripts/app.js && npx uglifyjs dist/scripts/codemirror.js --output dist/scripts/codemirror.js",
        "minify-css": "npx uglifycss dist/styles/app.css --output dist/styles/app.css",
        "copy-assets:prod": "npx copyfiles -u 1 app/index.html dist/",
        "copy-assets": "npx copyfiles -u 1 app/index.html .tmp/",
        "build-wc": "stencil build --config ./components/codeblock/stencil.config.ts",
        "start-wc": "stencil build --dev --watch --serve --es5 --config ./components/codeblock/stencil.config.ts",
        "concat-wc-codemirror": "npx concat -o .tmp/scripts/codemirror.js ./node_modules/codemirror/lib/codemirror.js ./node_modules/codemirror/mode/javascript/javascript.js ./node_modules/codemirror/addon/fold/foldcode.js ./node_modules/codemirror/addon/fold/foldgutter.js ./node_modules/codemirror/addon/fold/brace-fold.js",
        "concat-wc-codemirror:prod": "npx concat -o dist/scripts/codemirror.js ./node_modules/codemirror/lib/codemirror.js ./node_modules/codemirror/mode/javascript/javascript.js ./node_modules/codemirror/addon/fold/foldcode.js ./node_modules/codemirror/addon/fold/foldgutter.js ./node_modules/codemirror/addon/fold/brace-fold.js",
        "watch": "npm-watch",
        "prebuild:prod": "npx rimraf dist",
        "build:prod": "npm run build-wc && npm run compile-ts:prod && npm run copy-assets:prod && npm run minify-js && npm run compile-scss:prod && npm run minify-css && npm run build-ts-simple-ast:prod",
        "prebuild:dev": "npx rimraf .tmp",
        "build:dev": "npm run build-wc && npm run compile-ts && npm run copy-assets && npm run compile-scss && npm run build-ts-simple-ast",
        "concat-app-dragmock": "npx concat -o .tmp/scripts/app.js .tmp/scripts/app.js .tmp/scripts/dragmock.js test/mock-drag.js",
        "build:dev:test-e2e": "npm run compile-dragmock && npm run build-wc && npm run compile-ts && npm run concat-app-dragmock && npm run copy-assets && npm run compile-scss && npm run build-ts-simple-ast",
        "doc": "npx typedoc --out doc --module commonjs --ignoreCompilerErrors app",
        "madge": "npx madge --warning -i doc/dependency-graph.png app/**/*.ts",
        "lint": "npx tslint -p tsconfig.json -c tslint.json",
        "start": "npm-run-all -p serve watch",
        "serve": "superstatic .tmp --port 8383 --host localhost",
        "test:e2e": "npm run build:dev:test-e2e && npm run test:testcafe:saucelabs",
        "test:testcafe:local": "npm run build:dev:test-e2e && npx testcafe chromium test/testcafe/test.js",
        "test:testcafe:remote": "npm run build:dev:test-e2e && npx testcafe chrome,firefox test/testcafe/test.js",
        "test:testcafe:saucelabs": "npm run build:dev:test-e2e && npx testcafe \"browserstack:saucelabs:Chrome@48.0:Linux\" test/testcafe/test.js --app \"http-server .tmp -p 8383\"",
        "test:testcafe:browserstack": "npx testcafe \"browserstack:chrome@69.0:Windows 10\" test/testcafe/test.js",
        "test-jest": "jest --config jest.config.js --coverage",
        "test-wc": "jest --config jest.wc.config.js --coverage",
        "cypress:run": "npx cypress run",
        "cypress:open": "npx cypress open"
    },
    "watch": {
        "compile-ts": {
            "patterns": [
                "app"
            ],
            "extensions": "ts"
        },
        "copy-assets": {
            "patterns": [
                "app"
            ],
            "extensions": "html"
        },
        "compile-scss": {
            "patterns": [
                "app"
            ],
            "extensions": "scss"
        }
    },
    "dependencies": {
        "@stencil/sass": "^0.1.0",
        "codemirror": "^5.40.2",
        "split.js": "^1.3.5",
        "ts-simple-ast": "^15.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.1.0",
        "@stencil/core": "0.12.4",
        "@types/filesystem": "0.0.29",
        "@types/split.js": "^1.3.1",
        "babel-preset-es2015-rollup": "^3.0.0",
        "browserify": "^16.2.3",
        "concat": "^1.0.3",
        "copyfiles": "^2.1.0",
        "cypress": "^3.1.0",
        "filesize-cli": "0.0.3",
        "http-server": "^0.11.1",
        "jest": "^23.6.0",
        "live-server": "^1.2.0",
        "madge": "^3.2.0",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "npm-run-all": "^4.1.3",
        "npm-watch": "^0.4.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.2",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-commonjs": "^9.1.8",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-typescript": "^1.0.0",
        "superstatic": "^6.0.3",
        "testcafe": "^0.22.0",
        "testcafe-browser-provider-browserstack": "^1.5.0",
        "testcafe-browser-provider-saucelabs": "^1.3.1",
        "ts-jest": "^23.10.2",
        "tslib": "^1.9.3",
        "tslint": "^5.11.0",
        "typedoc": "^0.12.0",
        "typescript": "^3.0.3",
        "uglify-es": "^3.3.9",
        "uglifycss": "0.0.29"
    }
}
