{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "components"
        ],
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "atom": {
        "rewriteTsconfig": false
    },
    "compileOnSave": false,
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "es"]
}